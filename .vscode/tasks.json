{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "eslint",
      "type": "shell",
      "command": "./node_modules/.bin/eslint './src/**/*.{ts,tsx}' --fix",
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$eslint-stylish"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
